<div class="container body-content span=8 offset=2">
    <div class="well">
        <form action="/editor/article/create/step/2" method="post" class="form-horizontal" id="upload-photos">
            <fieldset>
                <legend>Create new ######## - STEP 2 - Add Photos</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Add Images</label>
                    <div class="col-sm-4">
                        <input type="file" multiple="multiple" name="notUsed" id="photos-input">
                        <!-- Progress Bar -->
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                        <!-- END Progress Bar -->
                    </div>
                </div>
                <!-- Photos Album Container -->
                <div id="album" class="row">
                    {{#each articleArgs.inputImages}}
                        <div class="col-xs-6 col-md-4">
                            <a class="thumbnail" href="#">
                                <img src="/{{ this }}" alt="{{ this }}">
                            </a>
                        </div>
                    {{/each}}
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="submit" class="btn btn-primary" name="back" value="back">Back</button>

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-primary">Next</button>

                        <input type="hidden" name="inputTitle" value="{{ articleArgs.inputTitle }}">
                        <input type="hidden" name="inputPrice" value="{{ articleArgs.inputPrice }}">
                        <input type="hidden" name="inputLocation" value="{{ articleArgs.inputLocation }}">
                        <input type="hidden" name="inputDescription" value="{{ articleArgs.inputDescription }}">
                        {{#each articleArgs.inputImages}}
                            <input type="hidden" name="inputImages" value="{{ this }}">
                        {{/each}}
                        {{#each articleArgs.inputExtras}}
                            <input type="hidden" name="inputExtras" value="{{ this }}">
                        {{/each}}
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<script type="text/javascript" src="/javascripts/uploadAJAX.js"></script>
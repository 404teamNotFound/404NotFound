<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="">
            <fieldset>
                <legend>Delete Article</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="inputTitle">Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" id="inputTitle" class="form-control" value="{{article.title}}"
                               name="inputTitle" disabled >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="inputDescription">Description</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="inputDescription" rows="5"
                            name="inputDescription" disabled>{{article.description}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/editor/article/all" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<h2 id="moreInfoTitle">{{ article.title }}</h2>
<div id="mainDivMIPage">
    <div class="article-container" style="display: inline-block;">
        <div id="moreInfoPictures">
            <img src="/{{ article.firstImage }}" alt="Article pic" id="moreInforMainIMG">
            {{#each article.images }}
                <img src="/{{ this }}" alt="Article pic" id="moreInforIMGs">
            {{/each}}
        </div>
        <br >
        <div id="moreInfoText">
            {{ article.description }}
        </div>
        <div>
            <div id="moreInfoExtras">
                <b>Extras: </b>
                {{#each article.extras}}
                    <b id="moreInfoExtrasLayout">{{this.name}}</b>
                    <!-- <img src="./pics/AirCondition.png" alt="Article pic" height="22" width="28" class="wrap align-right"> !-->
                {{/each}}
            </div>
        </div>
        <div id="moreInfoPriceContacts">
            <p><b>Price: </b><b style="color:#6c9f43">{{article.price}} lv.</b></p>
            <!-- <p><b>Adress:</b> Sofia, Sofia center, pl. Naradono sabranie 4, 1000 </p> !-->
            <b>Phone: </b>{{ article.contactPhone}}
            <b id="moreInfoContactsAdjust">E-mail: </b>{{ article.contactEmail }}
            {{#if article.contactURL }}
                <b id="moreInfoContactsAdjust">Web site:</b>
                <a href="{{ article.contactURL }}" target="_blank">{{ article.contactURL }}</a>
            {{/if}}


            <!--
            <p><b>Rating:</b>&nbsp;&nbsp <span class="score">
                    <input type="radio" id="score-5" name="score" value="5"/>

                    <label title="2 stars" for="score-2">2 stars</label>

                    <input type="radio" id="score-1" name="score" value="1"/>
                    <label title="1 stars" for="score-1">1 stars</label>
                </span></p>!-->

        </div>

    </div>
    <div id="commentsSection">
        <details>
            <summary id="commentsDropDown">Coments and more</summary>
            <div id="allComments">
                {{#each article.comments}}
                    <div id="comments">
                        {{ this.content }}
                        <div id="moreInfoAuthorName">
                            By: {{ this.authorId.fullName }}
                        </div>
                    </div>
                {{/each}}
            </div>
            {{#if user}}
                <form method="post" action="" class="form-horizontal" id="form-horizontal5">
                    <fieldset id="commentsFieldSet">
                        <div class="form-group" id="form-group-comments">
                            <div class="col-sm-4">
                                <textarea id="inputComment" name="inputComment" rows="5" cols="80"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                <button type="reset" class="btn btn-default">Clear</button>

                                <a href="" class="btn-primary2" id="btn-default">Add Comment</a>
                            </div>
                        </div>
                        <input type="hidden" id="userID" value="{{ user.id }}">
                    </fieldset>
                </form>
            {{/if}}
        </details>
    </div>
</div>
<script type="text/javascript" src="/javascripts/commentAJAX.js"></script>
